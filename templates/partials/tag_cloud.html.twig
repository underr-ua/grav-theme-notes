{% set taxlist = taxonomylist.get() %}

{% if taxlist %}
    {% if filter %}
        {% for tax, value in taxlist[tax_type]|slice(filterstart, filterend) %}
            <a href="{{ base_url }}/{{ tax_type }}{{ config.system.param_sep }}{{ tax|e('url') }}"
                class="tag text-sm"
                rel="nofollow">{{tax}}</a>{% if not loop.last %},{% endif %}
        {% endfor %}
    {% else %}
        {% for tax, value in taxlist[tax_type]|ksort %}
            <a href="{{ base_url }}/{{ tax_type }}{{ config.system.param_sep }}{{ tax|e('url') }}"
                    class="tag text-sm"
                    rel="nofollow">{{ tax }}</a>{% if not loop.last %},{% endif %}
        {% endfor %}
    {% endif %}

{% endif %}
